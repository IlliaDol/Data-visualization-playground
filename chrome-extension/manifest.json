{
  "name": "DataViz AI — Chart anything",
  "version": "1.0.0",
  "description": "Створюйте графіки з будь-яких таблиць на веб-сторінках",
  "manifest_version": 3,
  "permissions": [
    "contextMenus", 
    "scripting", 
    "activeTab", 
    "storage"
  ],
  "background": { 
    "service_worker": "bg.js" 
  },
  "host_permissions": ["<all_urls>"],
  "action": { 
    "default_title": "Chart anything",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
